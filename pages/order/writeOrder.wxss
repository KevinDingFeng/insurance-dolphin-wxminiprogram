/* //遮盖层 */
.fullbg {
    height: 100%;
    position: fixed;
    background-color: rgb(1, 1, 1);
    transition: all 2s;
    opacity: 0;
    display: none;
    top: 0;
    left: 0;
    overflow-x: hidden;
    z-index: 10;
}
.fullopacity {
    opacity: 0.5;
    display: block;
}
.go_cc{
    display: block!important;
}
.go_success{
    display: none;
    position: fixed;
    top: 30%;
    left: 10%;
    width: 80%;
    z-index: 12;
    background-color: #fff;
    font-weight: 700;
    border-radius: 10px;
}

